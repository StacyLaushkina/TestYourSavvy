<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/drag_and_drop_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/suggested_letter_1"
            android:layout_width="@dimen/suggestion_letter_size"
            android:layout_height="@dimen/suggestion_letter_size"
            android:gravity="center"
            android:textSize="@dimen/text_size_huge"
            android:background="@drawable/drag_and_drop_letter_background"
            android:layout_margin="@dimen/default_margin"/>

        <TextView
            android:id="@+id/suggested_letter_2"
            android:layout_width="@dimen/suggestion_letter_size"
            android:layout_height="@dimen/suggestion_letter_size"
            android:gravity="center"
            android:textSize="@dimen/text_size_huge"
            android:background="@drawable/drag_and_drop_letter_background"
            android:layout_margin="@dimen/default_margin"/>

        <TextView
            android:id="@+id/suggested_letter_3"
            android:layout_width="@dimen/suggestion_letter_size"
            android:layout_height="@dimen/suggestion_letter_size"
            android:gravity="center"
            android:textSize="@dimen/text_size_huge"
            android:background="@drawable/drag_and_drop_letter_background"
            android:layout_margin="@dimen/default_margin"/>

        <TextView
            android:id="@+id/suggested_letter_4"
            android:layout_width="@dimen/suggestion_letter_size"
            android:layout_height="@dimen/suggestion_letter_size"
            android:gravity="center"
            android:textSize="@dimen/text_size_huge"
            android:background="@drawable/drag_and_drop_letter_background"
            android:layout_margin="@dimen/default_margin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_margin">

        <TextView
            android:id="@+id/answer_letter_1"
            android:layout_width="@dimen/answer_letter_size"
            android:layout_height="@dimen/answer_letter_size"
            android:gravity="center"
            android:textSize="@dimen/text_size_huge"
            android:background="@drawable/drag_and_drop_letter_background"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/default_margin"/>

        <TextView
            android:id="@+id/answer_letter_2"
            android:layout_width="@dimen/answer_letter_size"
            android:layout_height="@dimen/answer_letter_size"
            android:gravity="center"
            android:textSize="@dimen/text_size_huge"
            android:background="@drawable/drag_and_drop_letter_background"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"/>

        <TextView
            android:id="@+id/answer_letter_3"
            android:layout_width="@dimen/answer_letter_size"
            android:layout_height="@dimen/answer_letter_size"
            android:gravity="center"
            android:textSize="@dimen/text_size_huge"
            android:background="@drawable/drag_and_drop_letter_background"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"/>

        <TextView
            android:id="@+id/answer_letter_4"
            android:layout_width="@dimen/answer_letter_size"
            android:layout_height="@dimen/answer_letter_size"
            android:gravity="center"
            android:textSize="@dimen/text_size_huge"
            android:background="@drawable/drag_and_drop_letter_background"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"/>

        <TextView
            android:id="@+id/answer_letter_5"
            android:layout_width="@dimen/answer_letter_size"
            android:layout_height="@dimen/answer_letter_size"
            android:gravity="center"
            android:textSize="@dimen/text_size_huge"
            android:background="@drawable/drag_and_drop_letter_background"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginStart="@dimen/small_margin"/>
    </LinearLayout>

</RelativeLayout>